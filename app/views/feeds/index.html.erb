
<main>
<div class="container1">
  <div class="row">
    <div class="col-lg-1">

    </div>
    <div class="col-lg-7">
      <% @feeds.each do |feed| %>
      <section id="feed">
          <div class="photo">
              <header class="photo__header">
                  <%= link_to user_path(current_user.id) do %><%= image_tag current_user.photo.url, class: "photo__avatar" %><% end %>
                  <div class="photo__user-info">
                      <span class="photo__author"><%= current_user.name%></span>
                      <span class="photo__location">Location</span>
                  </div>
              </header>
              <%= link_to feed do %><%= image_tag feed.image.url,class: "image-post"%><% end %>
              <div class="photo__info">
                  <div class="photo__actions">
                      <span class="photo__action">
                          <%= link_to edit_feed_path(feed) do %><i class="fa fa-edit fa-lg"></i><% end %>
                      </span>
                      <span class="photo__action">
                          <%= link_to feed, method: :delete, data: { confirm: 'Are you sure?' } do %><i class="fa fa-trash-o fa-lg"></i><% end %>
                      </span>
                  </div>
                  <span class="photo__likes">liked by <b>Rando </b> and <b>45 others</b></span>
                  <span class="photo__time-ago"><%= feed.created_at.strftime('%Y/%-m/%-d %-H:%-M') %></span>
                  <div class="photo__add-comment-container">
                      <textarea name="comment" placeholder="Add a comment..."></textarea>
                      <a href="#">Post</a>
                  </div>
              </div>
          </div>
      </section>
      <% end %>
     </div>

    <div class="col-lg-2">
      <div class="affix">
        <div class="photo">
        <header class="photo__header">
