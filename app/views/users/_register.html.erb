<%= form_with(model: @user, local: true) do |f| %>
<%= f.label :name %>
<%= f.text_field :name %>
<%= f.label :email %>
<%= f.email_field :email %>
<%= f.label :password %>
<%= f.password_field :password %>
<%= f.label :password_confirmation %>
<%= f.password_field :password_confirmation %>
<%= f.label :photo %>
<%= image_tag(@user.photo.url) if @user.photo && @user.photo.url %>
<%= f.file_field :photo %>
<%= f.hidden_field :photo_cache %>
<%= f.submit %>
<% end %>
